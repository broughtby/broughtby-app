# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=broughtby
DB_USER=postgres
DB_PASSWORD=your_password_here

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret (change this to a random string in production)
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000

# Cloudinary Configuration (for image uploads)
# Sign up at https://cloudinary.com to get your credentials
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Email Configuration (for notifications)
# OPTION 1: Resend (RECOMMENDED - Simplest, works with custom domains)
# Sign up at https://resend.com (100 emails/day free, 3,000/month)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=BroughtBy <brooke@broughtby.co>

# OPTION 2: Gmail (for personal Gmail accounts only)
# 1. Enable 2-factor authentication on your Gmail account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the App Password (not your regular Gmail password)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-specific-password
# EMAIL_FROM=BroughtBy <noreply@broughtby.co>

# OPTION 3: SendGrid
# Sign up at https://sendgrid.com (free tier: 100 emails/day)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
# SENDGRID_API_KEY=your_sendgrid_api_key_here
# EMAIL_FROM=BroughtBy <noreply@broughtby.co>
